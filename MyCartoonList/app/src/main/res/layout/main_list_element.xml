<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainList_element_layout"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/mainList_element_meanScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:background="@color/black"
        android:drawablePadding="2dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:text="9.8"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:drawableEndCompat="@drawable/ic_star_score"
        app:drawableTint="@color/white" />

    <ImageView
        android:id="@+id/mainlist_element_image"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/cartoon_image"
        android:padding="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/mainList_element_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainlist_element_image"
        android:layout_centerHorizontal="true"
        android:maxWidth="150dp"
        android:paddingHorizontal="5dp"
        android:text="Title sadas dasd asdahskd ahfkj "
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mainList_element_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainList_element_title"
        android:layout_centerHorizontal="true"
        android:maxWidth="150dp"
        android:text="jansddkjsa, daksjdak "
        android:textAlignment="center" />

</RelativeLayout>
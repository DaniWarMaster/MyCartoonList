<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainList.MainListElementFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/mainList_details_image"
                    android:layout_width="200dp"
                    android:layout_height="240dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="15dp"
                    android:contentDescription="@string/cartoon_image"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="@string/score"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/mainList_details_scoreTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/score"
                        android:textColor="@color/purple_700"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="@string/rank"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/mainList_details_rankTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/rank"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="@string/nr_of_episodes"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/mainList_details_nrEpisodesTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/nr_of_episodes"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="5dp"
                        android:text="@string/type"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/mainList_details_typeTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="@string/type"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </RelativeLayout>


            <TextView
                android:id="@+id/mainList_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="This is the title"
                android:textColor="@color/purple_700"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainList_details_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="5dp"
                android:padding="3dp"
                android:text="Genre1, Genre2, Genre3, Genre4, Genre5"
                android:textAlignment="center"
                android:textSize="18sp" />

            <View
                style="@style/Divider"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Summary"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mainList_details_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:justificationMode="inter_word"
                android:padding="5dp"
                android:text="Acesta este un test pentru a observa cum se comporta textul in cazul in care punem o cantitate inumana de rahaturi in tr-un osd ingura linie"
                android:textSize="16sp" />

            <View
                style="@style/Divider"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/aired"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mainList_details_aired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/aired"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/source"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mainList_details_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/source"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/studio"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mainlist_details_studio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/studio"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/season"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mainlist_details_season"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/season"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/rating"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/mainList_details_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rating"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <View
                style="@style/Divider"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:text="@string/recommendation"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mainList_details_recco1"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/mainList_details_recco1_image"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/cartoon_image"
                        android:padding="10dp"
                        android:src="@mipmap/ic_launcher" />


                    <TextView
                        android:id="@+id/mainList_details_recco1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainList_details_recco1_image"
                        android:layout_centerHorizontal="true"
                        android:maxWidth="150dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/purple_700"
                        android:text="Title sadas dasd asdahskd ahfkj "
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mainList_details_recco2"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/mainList_details_recco2_image"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/cartoon_image"
                        android:padding="10dp"
                        android:src="@mipmap/ic_launcher" />


                    <TextView
                        android:id="@+id/mainList_details_recco2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainList_details_recco2_image"
                        android:layout_centerHorizontal="true"
                        android:maxWidth="150dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/purple_700"
                        android:text="Title sadas dasd asdahskd ahfkj "
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </RelativeLayout>
                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mainList_details_recco3"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/mainList_details_recco3_image"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="@string/cartoon_image"
                        android:padding="10dp"
                        android:src="@mipmap/ic_launcher" />


                    <TextView
                        android:id="@+id/mainList_details_recco3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mainList_details_recco3_image"
                        android:layout_centerHorizontal="true"
                        android:maxWidth="150dp"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/purple_700"
                        android:text="Title sadas dasd asdahskd ahfkj "
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <View
                style="@style/Divider"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/comments_amp_reviews"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/mainList_details_addComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_baseline_draw_24"
                    android:drawableTint="@color/purple_700"
                    android:layout_alignParentEnd="true"
                    android:paddingTop="10dp"
                    android:layout_marginEnd="30dp"
                    />
            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailsElement_fragment_recyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>
</FrameLayout>